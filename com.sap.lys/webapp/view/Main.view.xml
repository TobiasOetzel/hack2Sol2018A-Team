<mvc:View 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" xmlns:iot="sap.ui.iot.controls" 
	xmlns:iotele="sap.ui.iot.elements" 
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
	controllerName="com.sap.lys.controller.Main" 
	displayBlock="true">

	<Page 
		showNavButton="true"
		navButtonPress="onNavBack"
		title="{i18n>title}" 
		backgroundDesign="Solid" 
		showFooter="false">
		<content>
			
		    <iot:IoTThingList things="{path:'/Things',parameters:{expand:'DYN_ENT_com_sap_appiot_eventtypes__StandardEventType'}}" id="list0" thingListMode="None">
		        <iot:columns>
		            <iotele:IoTThingListColumnHeader text="Thing Id" id="header0"/>
		            <iotele:IoTThingListColumnHeader text="Thing Name" id="header1"/>
		            <iotele:IoTThingListColumnHeader text="Thing Type" id="header2"/></iot:columns>
		        <iot:things>
		            <iotele:IoTThingListElement thingImage="{ThingId}" highSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/High}" mediumSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/Medium}" lowSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/Low}" id="element0" itemPress="action" action:wiring="\{'itemPress':\{'navigation':\{'routeName':'Detail_binded','keys':[\{'name':'ThingId','type':'Edm.String'\}]\}\}\}">
		                <iotele:cells>
		                    <iotele:IoTThingListColumn text="{ThingId}" id="column0"/>
		                    <iotele:IoTThingListColumn text="{ThingName}" id="column1"/>
		                    <iotele:IoTThingListColumn text="{ThingType}" id="column2"/></iotele:cells>
		            </iotele:IoTThingListElement>
		        </iot:things></iot:IoTThingList>
		</content>
	</Page>

</mvc:View>