<mvc:View 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" xmlns:iot="sap.ui.iot.controls" 
	xmlns:iotele="sap.ui.iot.elements" 
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
	controllerName="com.sap.lys.controller.Main" 
	displayBlock="true">

	<Page 
		class="mainPage" 
		showNavButton="true"
		navButtonPress="onNavBack"
		title="LYS - Work Queue" 
		backgroundDesign="Solid" 
		showFooter="false">
		<content>
			<List class="sapContrast sapContrastPlus" items="{path: '/Things', templateShareable : 'true'}">
					<items>
						<NotificationListItem
								title="{ThingName}"
								description="{ThingType}"
								showCloseButton="false"
								datetime="1 hour"
								unread="true"
								priority="None"
								press="onListItemPressed"
								authorPicture="sap-icon://lightbulb"/>
					</items>
			</List>
			
		</content>
	</Page>

</mvc:View>