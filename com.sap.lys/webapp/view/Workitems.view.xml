<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:iot="sap.ui.iot.controls" xmlns:iotele="sap.ui.iot.elements" xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="com.sap.lys.controller.Workitems" displayBlock="true">
	
	<Page 
		title="{i18n>title}" 
		backgroundDesign="Solid" 
		navButtonPress="onNavBack"
		showNavButton="true"
		showFooter="false">
            <headerContent>
               <Button
            	  text="test"	
                  icon="sap-icon://hello-world"
                  press="onOpenDialog"/>
            </headerContent>
            <content>
			<HBox width="100%" height="100%" id="__hbox0">
				<items>
					<VBox width="100%" direction="Column" id="__vbox0">
					    <items>
					    <iot:IoTThingList things="{path:'/Things',parameters:{expand:'DYN_ENT_com_sap_appiot_eventtypes__StandardEventType,DYN_ENT_hack2sol_team0_hack2sol_ateam__hue_state'}}" id="list0">
					            <iot:columns>
					                <iotele:IoTThingListColumnHeader text="Thing Id" id="header0"/>
					                <iotele:IoTThingListColumnHeader text="Thing Name" id="header1"/>
					                <iotele:IoTThingListColumnHeader text="Thing Type" id="header2"/></iot:columns>
					            <iot:things>
					                <iotele:IoTThingListElement thingImage="{ThingId}" highSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/High}" mediumSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/Medium}" lowSeverity="{DYN_ENT_com_sap_appiot_eventtypes__StandardEventType/Low}" id="element0">
					                    <iotele:cells>
					                        <iotele:IoTThingListColumn text="{ThingId}" id="column0"/>
					                        <iotele:IoTThingListColumn text="{ThingName}" id="column1"/>
					                        <iotele:IoTThingListColumn text="{ThingType}" id="column2"/></iotele:cells>
					                </iotele:IoTThingListElement>
					            </iot:things></iot:IoTThingList>
					    </items>
					</VBox>
				</items>
			</HBox>
		</content>
	</Page>
</mvc:View>