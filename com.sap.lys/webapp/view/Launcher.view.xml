<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="com.sap.lys.controller.Launcher">
	
	<App id="idAppControl">
		<pages>
			<Page id="launcherPage" class="launcherPage" showHeader="false" showFooter="true">
				<content>
 
					<html:div class="launchHeader">
						<html:img src="./images/bulb.png" />
						<html:div>
							<html:h1>LYS</html:h1>						
							<html:h2>sustainable and economical</html:h2>		
						</html:div>
					</html:div>
					

	         	    <GenericTile header="Work Queue" subheader="open issues to solve" class="tile1 tile" press="onShowThings"/>
			        <GenericTile header="Locations" subheader="sensor overview" class="tile2 tile" press="onShowMap"/>
			        <GenericTile header="Test" subheader="test a sensor" class="tile3 tile" press="onShowTest"/>

				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
				        <core:Icon src="sap-icon://sap-logo-shape" size="2em" id="icon0"/>
						<Text text="SAP"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
	
</mvc:View>